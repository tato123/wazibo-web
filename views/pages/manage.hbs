<div class="container">
    <section>
    <h2 style="display:inline-block">Sales</h2>
    <a href="/sell/new" class="btn btn-default pull-right" style="margin-top:20px">+ List new item</a>
    <hr>
    {{#if error}}
    <div class="alert alert-danger" role="alert">
        {{error}}
    </div>
    {{/if}}
    {{#if success}}
    <div class="alert alert-success" role="alert">
        {{success}}
    </div>
    {{/if}}
    
    <div class="row">
        <div class="col-sm-12 col-md-12 col-lg-12">            
            <p>Wazibo allows you to track all your items for sale, tag items, and find individuals who are interested in purchasing your items</p>
        </div>
    </div>
    </section>
    
    <div class="row">
        <div class="col-sm-12 col-md-12 col-lg-12">
            
            
                
                
                <table class="table">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Description</th>
                            <th>Price</th>
                            <th>Downloadable Tag</th>
                            <th>Manage</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#if items}}
                            {{#each items}}
                            <tr>
                                <td><a href="/item/{{this._id}}">{{this.name}}</a></td>
                                <td>{{this.description}}</td>
                                <td>{{this.price}}</td>
                                <td><a href="/sell/item/{{this._id}}/print/tag">Print</a></td>
                                <td>(<a href="/sell/edit/{{this._id}}">Edit</a>, <a href="/sell/item/{{this._id}}/delete">Delete</a>)</td>
                            </tr>
                            {{/each}}
                        {{else }}
                            <tr>
                                <td colspan="3">
                                    Looks like you haven't created anything yet
                                </td>
                            </tr>
                        {{/if}}
                    </tbody>
                </table>

        </div>       
    </div>
</div>